                date: "2024-01-15",
                time: "12:15",
                machine: null,
                measurements: {
                    section: 2.8,
                    crimpingHeight: 1.5,
                    insulationHeight: 2.4,
                    crimpingWidth: 3.1,
                    insulationWidth: 4.5
                }
            },
            // Add more sample data as needed
        ];

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeDatePickers();
            renderTable(sampleData);
            setupEventListeners();
            updateKPIs(sampleData);
        });

        // Initialize date pickers
        function initializeDatePickers() {
            const dateConfig = {
                dateFormat: "Y-m-d",
                maxDate: "today",
                disableMobile: true
            };

            const dateFromPicker = flatpickr("#dateFrom", {
                ...dateConfig,
                onChange: function(selectedDates, dateStr) {
                    if (selectedDates[0]) {
                        dateToPicker.set('minDate', dateStr);
                        filterTable();
                    }
                }
            });

            const dateToPicker = flatpickr("#dateTo", {
                ...dateConfig,
                onChange: function(selectedDates, dateStr) {
                    if (selectedDates[0]) {
                        dateFromPicker.set('maxDate', dateStr);
                        filterTable();
