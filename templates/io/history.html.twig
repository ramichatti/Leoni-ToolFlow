            }

            data.forEach(item => {
                const row = document.createElement('tr');
                row.setAttribute('data-tool-id', item.toolId.toLowerCase());
                row.setAttribute('data-status', item.status);
                row.setAttribute('data-conformite', item.conformite || '');
                row.setAttribute('data-date', item.date);
