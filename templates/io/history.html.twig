            },
            {
                id: 2,
                toolId: "T002", 
                toolName: "Wire Stripping Tool",
                manufacturer: "TE Connectivity",
                status: "OUT",
                conformite: null,
                date: "2024-01-15",
                time: "13:45",
                machine: 5
            },
            {
