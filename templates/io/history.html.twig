            });

            updateResultsInfo(data.length);
        }

        // Update KPIs
        function updateKPIs(data) {
            const inCount = data.filter(item => item.status === 'IN').length;
            const outCount = data.filter(item => item.status === 'OUT').length;
            const conformeCount = data.filter(item => item.conformite === 'conforme').length;
            const nonConformeCount = data.filter(item => item.conformite === 'non conforme').length;

            document.getElementById('total-in').textContent = inCount;
            document.getElementById('total-out').textContent = outCount;
            document.getElementById('total-operations').textContent = data.length;
            document.getElementById('total-conforme').textContent = conformeCount;
            document.getElementById('total-non-conforme').textContent = nonConformeCount;
        }

        // Filter table based on search criteria
        function filterTable() {
            const toolId = document.getElementById('toolId').value.toLowerCase().trim();
            const status = document.getElementById('status').value;
            const conformite = document.getElementById('conformite').value;
            const machineNumber = document.getElementById('machineNumber').value;
            const dateFrom = document.getElementById('dateFrom').value;
            const dateTo = document.getElementById('dateTo').value;

            const filteredData = sampleData.filter(item => {
                let show = true;

                if (toolId && !item.toolId.toLowerCase().includes(toolId)) {
                    show = false;
                }

                if (status && item.status !== status) {
                    show = false;
                }

                if (conformite && item.conformite !== conformite) {
                    show = false;
                }

                if (machineNumber && item.machine != machineNumber) {
                    show = false;
                }

                if (dateFrom && item.date < dateFrom) {
                    show = false;
                }

                if (dateTo && item.date > dateTo) {
                    show = false;
                }

                return show;
            });

            renderTable(filteredData);
            updateKPIs(filteredData);
        }

        // Reset all filters
        function resetFilters() {
            document.getElementById('toolId').value = '';
            document.getElementById('status').value = '';
            document.getElementById('conformite').value = '';
            document.getElementById('machineNumber').value = '';
            document.getElementById('dateFrom').value = '';
            document.getElementById('dateTo').value = '';

            // Reset date picker constraints
            flatpickr("#dateFrom").clear();
            flatpickr("#dateTo").clear();

            // Add animation
            document.getElementById('resetButton').classList.add('pulse');
            setTimeout(() => {
                document.getElementById('resetButton').classList.remove('pulse');
            }, 1000);

            renderTable(sampleData);
            updateKPIs(sampleData);
        }

