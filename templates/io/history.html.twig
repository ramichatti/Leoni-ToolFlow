        // Setup event listeners
        function setupEventListeners() {
            document.getElementById('toolId').addEventListener('input', debounce(filterTable, 300));
            document.getElementById('status').addEventListener('change', filterTable);
            document.getElementById('conformite').addEventListener('change', filterTable);
            document.getElementById('machineNumber').addEventListener('input', debounce(filterTable, 300));
            document.getElementById('resetButton').addEventListener('click', resetFilters);
        }

        // Render table with data
        function renderTable(data) {
            const tableBody = document.getElementById('table-body');
            tableBody.innerHTML = '';

            if (data.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="6" class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-search"></i>
                            </div>
