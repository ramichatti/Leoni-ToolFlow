                    <label for="toolId">Inventory No.</label>
                    <input type="text" id="toolId" class="search-input" placeholder="Enter inventory number...">
                </div>
                <div class="search-group">
                    <label for="status">Status</label>
                    <select id="status" class="search-input">
                        <option value="">All Statuses</option>
                        <option value="IN">IN - Tool Check-in</option>
                        <option value="OUT">OUT - Tool Check-out</option>
                    </select>
                </div>
                <div class="search-group">
                    <label for="conformite">Conformité</label>
                    <select id="conformite" class="search-input">
                        <option value="">All</option>
                        <option value="conforme">Conforme</option>
                        <option value="non conforme">Non Conforme</option>
                    </select>
                </div>
                <div class="search-group">
                    <label for="machineNumber">Machine Number</label>
                    <input type="number" id="machineNumber" class="search-input" placeholder="Machine number..." min="1">
                </div>
                <div class="search-group">
                    <label for="dateFrom">From Date</label>
                    <input type="text" id="dateFrom" class="date-input" placeholder="Select start date" readonly>
                </div>
                <div class="search-group">
                    <label for="dateTo">To Date</label>
                    <input type="text" id="dateTo" class="date-input" placeholder="Select end date" readonly>
                </div>
            </div>
            <div class="search-actions">
                <button type="button" id="resetButton" class="reset-btn">
                    <i class="fas fa-undo-alt"></i>
                    Reset All Filters
                </button>
            </div>
        </div>

        <!-- Table Container -->
        <div class="table-container fade-in">
            <div class="table-header">
                <div class="table-title">
                    <i class="fas fa-table"></i>
                    Operations Overview
                </div>
                <div class="results-info" id="results-info">
                    Showing 42 results
                </div>
            </div>

            <table class="modern-table">
                <thead>
                    <tr>
                        <th>Tool Info</th>
                        <th>Status</th>
                        <th>Conformité</th>
                        <th>Date & Time</th>
                        <th>Machine</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                    <!-- Sample data rows -->
                </tbody>
            </table>

            <div class="pagination-container">
                <div class="results-summary">
                    <span id="page-info">Page 1 of 3 (42 items)</span>
                </div>
                <div class="pagination" id="pagination">
                    <!-- Pagination will be generated by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Details -->
    <div id="detailsModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">
                    <i class="fas fa-info-circle"></i>
                    <span id="modal-title">Operation Details</span>
                </div>
                <button class="modal-close" onclick="closeModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
                <!-- Modal content will be populated by JavaScript -->
            </div>
        </div>
    </div>

