{% extends 'base.html.twig' %}

{% block title %}Verify Code - Leoni ToolFlow{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <style>
        @keyframes float {
            0% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
            100% { transform: translateY(0) rotate(0deg); }
        }

        @keyframes float2 {
            0% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(20px) rotate(-5deg); }
            100% { transform: translateY(0) rotate(0deg); }
        }

        .geometric-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
        }

        .shape {
            position: absolute;
            background: linear-gradient(45deg, rgba(0, 43, 92, 0.05), rgba(25, 118, 210, 0.05));
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            width: 300px;
            height: 300px;
            top: -150px;
            left: -150px;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 200px;
            height: 200px;
            top: 40%;
            right: -100px;
            animation: float2 12s ease-in-out infinite;
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        .shape:nth-child(3) {
            width: 150px;
            height: 150px;
            bottom: -75px;
            left: 10%;
            animation-delay: -3s;
            animation-duration: 10s;
            border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        }

        .session {
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .alert {
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 4px;
            width: 100%;
            box-sizing: border-box;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .code-info {
            color: #666;
            text-align: center;
            margin-bottom: 20px;
            font-size: 0.9em;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid var(--primary-color-saturated);
        }
        .countdown {
            font-weight: bold;
            color: var(--primary-color-saturated);
            font-size: 1.1em;
        }
        .countdown.warning {
            color: #ff9800;
        }
        .countdown.danger {
            color: #f44336;
        }
        .expired-message {
            text-align: center;
            padding: 30px 20px;
        }
        .expired-message .alert {
            margin-bottom: 20px;
        }
        .btn-primary {
            background: var(--primary-color-saturated);
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 4px;
            display: inline-block;
            transition: 0.3s ease all;
            font-weight: 500;
        }
        .btn-primary:hover {
            background: var(--primary-color);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
<div class="geometric-background">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<div class="session">
    <div class="left" style="background-color: white; padding: 10px;">
        <img src="{{ asset('images/Logo.png') }}" alt="Leoni Logo">
    </div>
    <form method="post" action="{{ path('app_reset_password_validate') }}" class="log-in" autocomplete="off" id="verifyForm">
        <h4>Verification <span>Code</span></h4>
        <p>Check your email for the<br/>verification code.</p>

        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}
        
        <div class="code-info">
            <strong>Code expires in:</strong> <span id="countdown" class="countdown"></span>
        </div>

        <div class="floating-label">
            <input placeholder="6-digit Code" type="text" name="code" id="code" required autofocus maxlength="6" 
                   pattern="[0-9]*" inputmode="numeric">
            <label for="code">6-digit Code:</label>
            <div class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path d="M11 17c0 .55.45 1 1 1s1-.45 1-1-.45-1-1-1-1 .45-1 1zm0-9h2V7h-2v1zm0 4h2v-2h-2v2zm10-4v9c0 1.1-.9 2-2 2H5c-1.11 0-2-.9-2-2l.01-9c0-1.1.89-2 1.99-2h1V5c0-2.76 2.24-5 5-5s5 2.24 5 5v1h1c1.1 0 2 .9 2 2zM12 3c-1.66 0-3 1.34-3 3v1h6V6c0-1.66-1.34-3-3-3zm5 4H7c-.55 0-1 .45-1 1v9c0 .55.45 1 1 1h10c.55 0 1-.45 1-1V8c0-.55-.45-1-1-1z"/>
                </svg>
            </div>
        </div>

        <button type="submit">Verify Code</button>
        
        <div class="register-link" style="margin-top: 20px; text-align: center; width: 100%;">
            <p>Didn't receive the code?<br/><a href="{{ path('app_reset_password') }}" style="color: var(--primary-color-saturated); text-decoration: none;">Request New Code</a></p>
        </div>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let timeLeft = 300; // 5 minutes in seconds
    const countdownElement = document.getElementById('countdown');
    const form = document.getElementById('verifyForm');
    
    function formatTime(seconds) {
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        return `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;
    }
    
    function updateCountdown() {
        countdownElement.textContent = formatTime(timeLeft);
        
        // Update styling based on time remaining
        countdownElement.className = 'countdown';
        if (timeLeft <= 60) {
            countdownElement.classList.add('warning');
        }
        if (timeLeft <= 30) {
            countdownElement.classList.add('danger');
        }
    }
    
    updateCountdown(); // Initial display
    
    const countdown = setInterval(function() {
        timeLeft--;
        
        updateCountdown();
        
        if (timeLeft <= 0) {
            clearInterval(countdown);
            form.innerHTML = `
                <div class="expired-message">
                    <div class="alert alert-danger">
                        <strong>‚è∞ Time Expired</strong><br>
                        This verification code has expired. Please request a new one.
                    </div>
                    <a href="{{ path('app_reset_password') }}" class="btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" style="vertical-align: middle; margin-right: 8px;">
                            <path d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8z"/>
                        </svg>
                        Request New Code
                    </a>
                </div>
            `;
        }
    }, 1000);
    
    // Auto-focus next input field
    const codeInput = document.getElementById('code');
    codeInput.addEventListener('input', function(e) {
        this.value = this.value.replace(/[^0-9]/g, '');
    });
});
</script>
{% endblock %}
