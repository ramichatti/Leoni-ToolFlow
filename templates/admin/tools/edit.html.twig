{% extends 'base_back.html.twig' %}

{% block title %}Edit Tool{% endblock %}

{% block stylesheets %}
    <style>
        .tool-header {
            margin-bottom: 2rem;
        }
        
        .tool-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #5a5a5a;
            margin-bottom: 0.5rem;
        }
        
        .tool-header p {
            color: #6c757d;
            margin-bottom: 0;
        }
        
        .btn-back {
            background-color: #f8f9fc;
            color: #5a5a5a;
            border: 1px solid #d1d3e2;
            padding: 0.5rem 1rem;
            font-weight: 600;
            border-radius: 0.35rem;
            transition: all 0.2s;
        }
        
        .btn-back:hover {
            background-color: #eaecf4;
            color: #3a3a3a;
        }
        
        .btn-back i {
            margin-right: 0.5rem;
        }
        
        .form-container {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .form-header {
            background-color: #f8f9fc;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-header h5 {
            margin-bottom: 0;
            font-weight: 700;
            color: #5a5a5a;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #5a5a5a;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-section-title i {
            margin-right: 0.75rem;
            color: #5a5a5a;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #5a5a5a;
            margin-bottom: 0.5rem;
        }
        
        .form-control {
            border: 1px solid #d1d3e2;
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            color: #5a5a5a;
            transition: all 0.2s;
        }
        
        .form-control:focus {
            border-color: #a1a8c3;
            box-shadow: 0 0 0 0.2rem rgba(90, 90, 90, 0.15);
        }
        
        .form-select {
            border: 1px solid #d1d3e2;
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            color: #5a5a5a;
            transition: all 0.2s;
        }
        
        .form-select:focus {
            border-color: #a1a8c3;
            box-shadow: 0 0 0 0.2rem rgba(90, 90, 90, 0.15);
        }
        
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }
        
        .is-invalid {
            border-color: #dc3545;
        }
        
        .is-invalid:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
        
        .form-footer {
            background-color: #f8f9fc;
            padding: 1.5rem;
            border-top: 1px solid #e3e6f0;
            text-align: right;
        }
        
        .btn-submit {
            padding: 0.75rem 2rem;
            font-weight: 600;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            transition: all 0.2s;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        
        .btn-submit i {
            margin-right: 0.75rem;
        }
        
        .form-text {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }
        
        .input-group-text {
            background-color: #f8f9fc;
            border-color: #d1d3e2;
            color: #5a5a5a;
        }
        
        /* Tool info card styles */
        .tool-info-card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .tool-info-header {
            background-color: #f8f9fc;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .tool-info-header h6 {
            margin-bottom: 0;
            font-weight: 700;
            color: #5a5a5a;
        }
        
        .tool-info-body {
            padding: 1.5rem;
        }
        
        .tool-info-item {
            display: flex;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .tool-info-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }
        
        .tool-info-label {
            width: 40%;
            font-weight: 600;
            color: #5a5a5a;
        }
        
        .tool-info-value {
            width: 60%;
            color: #6c757d;
        }
        
        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 600;
            font-size: 0.75rem;
            border-radius: 0.35rem;
        }
        
        /* Tool location styles */
        .tool-location {
            margin-top: 1.5rem;
        }
        
        .tool-location-title {
            font-size: 1rem;
            font-weight: 700;
            color: #5a5a5a;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .tool-location-title i {
            margin-right: 0.5rem;
        }
        
        .location-badge {
            display: inline-block;
            padding: 0.35rem 0.65rem;
            border-radius: 0.35rem;
            font-size: 0.85rem;
            font-weight: 600;
            background-color: #e9ecef;
            color: #5a5a5a;
            margin-right: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="tool-header d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>Edit Tool</h1>
                <p>Update tool information</p>
            </div>
            <div>
                <a href="{{ path('app_admin_tools') }}" class="btn btn-back me-2">
                    <i class="fas fa-arrow-left"></i> Back to Tools
                </a>
                {# <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash"></i> Delete
                </button> #}
            </div>
        </div>
        
        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this tool? This action cannot be undone.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="post" action="{{ path('app_admin_tools_delete', {'id': tool.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tool.id) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Alert Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-lg-4">
                <!-- Tool Information Card -->
                <div class="tool-info-card">
                    <div class="tool-info-header">
                        <h6>Tool Information</h6>
                    </div>
                    <div class="tool-info-body">
                        <div class="tool-info-item">
                            <div class="tool-info-label">ID:</div>
                            <div class="tool-info-value">{{ tool.id }}</div>
                        </div>
                        <div class="tool-info-item">
                            <div class="tool-info-label">Description:</div>
                            <div class="tool-info-value">
                                <span class="badge {% if tool.description.value == 'Critical' %}bg-danger{% else %}bg-success{% endif %}">
                                    {{ tool.description.value }}
                                </span>
                            </div>
                        </div>
                        <div class="tool-info-item">
                            <div class="tool-info-label">Manufacturer:</div>
                            <div class="tool-info-value">{{ tool.manufacturer.value }}</div>
                        </div>
                        <div class="tool-info-item">
                            <div class="tool-info-label">Created By:</div>
                            <div class="tool-info-value">{{ tool.createdBy.firstName }} {{ tool.createdBy.lastName }}</div>
                        </div>
                        <div class="tool-info-item">
                            <div class="tool-info-label">Created At:</div>
                            <div class="tool-info-value">{{ tool.createdAt|date('Y-m-d H:i') }}</div>
                        </div>
                        
                        <div class="tool-location">
                            <div class="tool-location-title">
                                <i class="fas fa-map-marker-alt"></i> Tool Location
                            </div>
                            <div class="d-flex flex-wrap">
                                <span class="location-badge">Armoire: {{ tool.armoire }}</span>
                                <span class="location-badge">DNAS: {{ tool.dnas }}</span>
                                <span class="location-badge">Emplacement: {{ tool.emplacement }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-8">
                <!-- Form Container -->
                <div class="form-container">
                    <div class="form-header">
                        <h5>Edit Tool</h5>
                    </div>
                    
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="form-body">
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fas fa-info-circle"></i> Basic Information
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        {{ form_label(form.id, 'Tool ID', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.id) }}
                                        {{ form_errors(form.id) }}
                                        <div class="form-text">Unique identifier for this tool</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fas fa-tools"></i> Tool Details
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.manufacturer, 'Manufacturer', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.manufacturer) }}
                                        {{ form_errors(form.manufacturer) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fas fa-map-marker-alt"></i> Tool Location
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        {{ form_label(form.armoire, 'Armoire', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.armoire) }}
                                        {{ form_errors(form.armoire) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        {{ form_label(form.dnas, 'DNAS', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dnas) }}
                                        {{ form_errors(form.dnas) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        {{ form_label(form.emplacement, 'Emplacement', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.emplacement) }}
                                        {{ form_errors(form.emplacement) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-submit">
                            <i class="fas fa-save"></i> Update Tool
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const form = document.querySelector('.needs-validation');
            
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            }, false);
        });
    </script>
{% endblock %} 