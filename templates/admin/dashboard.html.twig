{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Set Chart.js defaults
            Chart.defaults.font.family = "'Nunito', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif";
            Chart.defaults.font.size = 12;
            Chart.defaults.plugins.tooltip.backgroundColor = 'rgba(0, 0, 0, 0.7)';
            Chart.defaults.plugins.tooltip.padding = 10;
            Chart.defaults.plugins.tooltip.cornerRadius = 4;
            Chart.defaults.plugins.tooltip.titleFont = { weight: 'bold' };
            
            // User Roles Chart
            var ctx = document.getElementById('userRolesChart').getContext('2d');
            var userRolesChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Maintenance', 'Admin'],
                    datasets: [{
                        data: [
                            {{ usersByRole['ROLE_MAINTENANCE'] }}, 
                            {{ usersByRole['ROLE_ADMIN'] }}, 
                        ],
                        backgroundColor: [
                            '#4e73df',
                            '#1cc88a',
                        ],
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    let percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
            
            // IO Status Chart
            var ioStatusCtx = document.getElementById('ioStatusChart').getContext('2d');
            var ioStatusChart = new Chart(ioStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['IN', 'OUT'],
                    datasets: [{
                        data: [
                            {{ iosByStatus['IN'] }},
                            {{ iosByStatus['OUT'] }}
                        ],
                        backgroundColor: [
                            '#36b9cc',
                            '#f6c23e'
                        ],
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    let percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
            
            // Tool Manufacturer Chart
            var toolManufacturerCtx = document.getElementById('toolManufacturerChart').getContext('2d');
            var toolManufacturerChart = new Chart(toolManufacturerCtx, {
                type: 'bar',
                data: {
                    labels: [
                        {% for manufacturer, count in toolsByManufacturer %}
                            '{{ manufacturer }}',
                        {% endfor %}
                    ],
                    datasets: [{
                        label: 'Tools by Manufacturer',
                        data: [
                            {% for manufacturer, count in toolsByManufacturer %}
                                {{ count }},
                            {% endfor %}
                        ],
                        backgroundColor: [
                            '#4e73df',
                            '#1cc88a',
                            '#36b9cc',
                            '#f6c23e',
                            '#e74a3b'
                        ],
                        borderWidth: 0,
                        borderRadius: 5,
                        maxBarThickness: 50
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            },
                            grid: {
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
            
            // Tool Description Chart
            var toolDescriptionCtx = document.getElementById('toolDescriptionChart').getContext('2d');
            var toolDescriptionChart = new Chart(toolDescriptionCtx, {
                type: 'pie',
                data: {
                    labels: [
                        {% for description, count in toolsByDescription %}
                            '{{ description }}',
                        {% endfor %}
                    ],
                    datasets: [{
                        data: [
                            {% for description, count in toolsByDescription %}
                                {{ count }},
                            {% endfor %}
                        ],
                        backgroundColor: ['#e74a3b', '#1cc88a'],
                        borderWidth: 0,
                        hoverOffset: 15
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    let percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
            
            // IO by Manufacturer Chart
            var ioByManufacturerCtx = document.getElementById('ioByManufacturerChart').getContext('2d');
            var ioByManufacturerChart = new Chart(ioByManufacturerCtx, {
                type: 'bar',
                data: {
                    labels: [
                        {% for manufacturer, statuses in iosByManufacturerAndStatus %}
                            '{{ manufacturer }}',
                        {% endfor %}
                    ],
                    datasets: [
                        {
                            label: 'IN',
                            data: [
                                {% for manufacturer, statuses in iosByManufacturerAndStatus %}
                                    {{ statuses.IN }},
                                {% endfor %}
                            ],
                            backgroundColor: '#36b9cc',
                            borderWidth: 0,
                            borderRadius: 5,
                            maxBarThickness: 35
                        },
                        {
                            label: 'OUT',
                            data: [
                                {% for manufacturer, statuses in iosByManufacturerAndStatus %}
                                    {{ statuses.OUT }},
                                {% endfor %}
                            ],
                            backgroundColor: '#f6c23e',
                            borderWidth: 0,
                            borderRadius: 5,
                            maxBarThickness: 35
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            },
                            grid: {
                                drawBorder: false,
                                color: 'rgba(0, 0, 0, 0.05)'
                            },
                            stacked: false
                        },
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                            stacked: false
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                title: function(context) {
                                    return context[0].label;
                                },
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw}`;
                                }
                            }
                        }
                    }
                }
            });
            
            // IO by Description Chart
            var ioByDescriptionCtx = document.getElementById('ioByDescriptionChart').getContext('2d');
            var ioByDescriptionChart = new Chart(ioByDescriptionCtx, {
                type: 'bar',
                data: {
                    labels: [
                        {% for description, statuses in iosByDescriptionAndStatus %}
                            '{{ description }}',
                        {% endfor %}
                    ],
                    datasets: [
                        {
                            label: 'IN',
                            data: [
                                {% for description, statuses in iosByDescriptionAndStatus %}
                                    {{ statuses.IN }},
                                {% endfor %}
                            ],
                            backgroundColor: '#36b9cc',
                            borderWidth: 0,
                            borderRadius: 5,
                            maxBarThickness: 60
                        },
                        {
                            label: 'OUT',
                            data: [
                                {% for description, statuses in iosByDescriptionAndStatus %}
                                    {{ statuses.OUT }},
                                {% endfor %}
                            ],
                            backgroundColor: '#f6c23e',
                            borderWidth: 0,
                            borderRadius: 5,
                            maxBarThickness: 60
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            },
                            grid: {
                                drawBorder: false,
                                color: 'rgba(0, 0, 0, 0.05)'
                            },
                            stacked: false
                        },
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                            stacked: false
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                title: function(context) {
                                    return context[0].label;
                                },
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw}`;
                                }
                            }
                        }
                    }
                }
            });
            
            // Animate count numbers
            $('.count').each(function() {
                $(this).prop('Counter', 0).animate({
                    Counter: $(this).text()
                }, {
                    duration: 1000,
                    easing: 'swing',
                    step: function(now) {
                        $(this).text(Math.ceil(now));
                    }
                });
            });
        });
    </script>
