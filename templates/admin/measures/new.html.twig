{% extends 'base_back.html.twig' %}

{% block title %}Add New Measure{% endblock %}

{% block stylesheets %}
    <style>
        .tool-header {
            margin-bottom: 2rem;
        }
        
        .tool-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #5a5a5a;
            margin-bottom: 0.5rem;
        }
        
        .tool-header p {
            color: #6c757d;
            margin-bottom: 0;
        }
        
        .btn-back {
            background-color: #f8f9fc;
            color: #5a5a5a;
            border: 1px solid #d1d3e2;
            padding: 0.5rem 1rem;
            font-weight: 600;
            border-radius: 0.35rem;
            transition: all 0.2s;
        }
        
        .btn-back:hover {
            background-color: #eaecf4;
            color: #3a3a3a;
        }
        
        .btn-back i {
            margin-right: 0.5rem;
        }
        
        .form-container {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .form-header {
            background-color: #f8f9fc;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-header h5 {
            margin-bottom: 0;
            font-weight: 700;
            color: #5a5a5a;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #5a5a5a;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .form-section-title i {
            margin-right: 0.75rem;
            color: #5a5a5a;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #5a5a5a;
            margin-bottom: 0.5rem;
        }
        
        .form-control {
            border: 1px solid #d1d3e2;
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            color: #5a5a5a;
            transition: all 0.2s;
        }
        
        .form-control:focus {
            border-color: #a1a8c3;
            box-shadow: 0 0 0 0.2rem rgba(90, 90, 90, 0.15);
        }
        
        .form-select {
            border: 1px solid #d1d3e2;
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            color: #5a5a5a;
            transition: all 0.2s;
        }
        
        .form-select:focus {
            border-color: #a1a8c3;
            box-shadow: 0 0 0 0.2rem rgba(90, 90, 90, 0.15);
        }
        
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }
        
        .is-invalid {
            border-color: #dc3545;
        }
        
        .is-invalid:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
        
        .form-footer {
            background-color: #f8f9fc;
            padding: 1.5rem;
            border-top: 1px solid #e3e6f0;
            text-align: right;
        }
        
        .btn-submit {
            padding: 0.75rem 2rem;
            font-weight: 600;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            transition: all 0.2s;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        
        .btn-submit i {
            margin-right: 0.75rem;
        }
        
        .form-text {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }
        
        .input-group-text {
            background-color: #f8f9fc;
            border-color: #d1d3e2;
            color: #5a5a5a;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="tool-header d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>Add New Measure</h1>
                <p>Create a new measure in the system</p>
                <br/>
            </div>
            <a href="{{ path('app_measure_index') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Measures
            </a>
        </div>

        <!-- Form Container -->
        <div class="form-container">
            <div class="form-header">
                <h5>Measure Information</h5>
            </div>
            
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="form-body">
                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-ruler-combined"></i> Technical Specifications
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.section, 'Section (mm²) *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.section) }}
                                {{ form_errors(form.section) }}
                                <div class="form-text">Enter the section in mm²</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.crimpingHeight, 'Crimping Height *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.crimpingHeight) }}
                                {{ form_errors(form.crimpingHeight) }}
                                <div class="form-text">Enter the height of crimping</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.insulationHeight, 'Insulation Height *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.insulationHeight) }}
                                {{ form_errors(form.insulationHeight) }}
                                <div class="form-text">Enter the height over insulation</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.crimpingWidth, 'Crimping Width *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.crimpingWidth) }}
                                {{ form_errors(form.crimpingWidth) }}
                                <div class="form-text">Enter the width of crimping</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.insulationWidth, 'Insulation Width *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.insulationWidth) }}
                                {{ form_errors(form.insulationWidth) }}
                                <div class="form-text">Enter the width over insulation</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-footer">
                <button type="submit" class="btn btn-primary btn-submit">
                    <i class="fas fa-save"></i> Create Measure
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const form = document.querySelector('.needs-validation');
            
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            }, false);
        });
    </script>
{% endblock %} 