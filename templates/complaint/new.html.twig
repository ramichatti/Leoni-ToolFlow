{% extends 'base.html.twig' %}

{% block title %}Submit Complaint{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    
    <div class="container mt-5 pt-5">
        <div class="row mb-4">
            <div class="col-md-8">
                <h1 class="page-title">Submit Complaint</h1>
                <p class="text-muted">Submit a new complaint to our team</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="{{ path('app_complaints') }}" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Back to Complaints
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card shadow mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-paper-plane me-2"></i> Complaint Form
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'complaint-form'}}) }}
                            <div class="mb-4">
                                <label for="{{ form.subject.vars.id }}" class="form-label fw-bold">Subject <span class="text-danger">*</span></label>
                                {{ form_widget(form.subject, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter a clear, concise subject'}}) }}
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i> Be specific about the issue you're reporting
                                </div>
                                {{ form_errors(form.subject) }}
                            </div>
                            
                            <div class="mb-4">
                                <label for="{{ form.description.vars.id }}" class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Provide detailed information about your complaint...'}}) }}
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i> Include all relevant details that could help us understand and resolve your issue
                                </div>
                                {{ form_errors(form.description) }}
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg submit-btn">
                                    <i class="fas fa-paper-plane me-2"></i> Submit Complaint
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card shadow mb-4 info-card">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-info-circle me-2"></i> Submission Guidelines
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="guidelines-list">
                            <li class="guideline-item">
                                <div class="guideline-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="guideline-content">
                                    <h6>Be Specific</h6>
                                    <p>Clearly describe the issue you're experiencing</p>
                                </div>
                            </li>
                            <li class="guideline-item">
                                <div class="guideline-icon">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="guideline-content">
                                    <h6>Include Details</h6>
                                    <p>Provide relevant information like dates, times, and locations</p>
                                </div>
                            </li>
                            <li class="guideline-item">
                                <div class="guideline-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <div class="guideline-content">
                                    <h6>Mention Timing</h6>
                                    <p>Note when the issue occurred or how long it's been happening</p>
                                </div>
                            </li>
                            <li class="guideline-item">
                                <div class="guideline-icon">
                                    <i class="fas fa-comment-dots"></i>
                                </div>
                                <div class="guideline-content">
                                    <h6>Be Respectful</h6>
                                    <p>Maintain professional communication in your complaint</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="card shadow info-card">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-clock me-2"></i> Response Time
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="response-time-info text-center mb-4">
                            <div class="response-time-icon mb-3">
                                <i class="fas fa-hourglass-half"></i>
                            </div>
                            <h4 class="response-time-value">24-48 hours</h4>
                            <p class="text-muted">Average response time during business days</p>
                        </div>
                        
                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        
                        <p class="mb-0 text-center">You can track the status of your complaint in the complaints dashboard.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .page-title {
            font-weight: 800;
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 2.2rem;
        }
        
        .guidelines-list {
            padding-left: 0;
            list-style: none;
        }
        
        .guideline-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }
        
        .guideline-item:last-child {
            margin-bottom: 0;
        }
        
        .guideline-icon {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background-color: rgba(13, 110, 253, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1rem;
            color: #0d6efd;
            flex-shrink: 0;
        }
        
        .guideline-content h6 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: #333;
        }
        
        .guideline-content p {
            margin-bottom: 0;
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .info-card {
            transition: all 0.3s ease;
        }
        
        .info-card:hover {
            transform: translateY(-5px);
        }
        
        .response-time-icon {
            font-size: 2.5rem;
            color: #0d6efd;
            opacity: 0.8;
        }
        
        .response-time-value {
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }
        
        .card-header {
            border-bottom: 1px solid rgba(0,0,0,0.08);
        }
        
        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        .submit-btn {
            transition: all 0.3s ease;
        }
        
        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        /* Form validation styling */
        .complaint-form .form-control.is-invalid {
            border-color: #dc3545;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .complaint-form .form-control.is-invalid:focus {
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
        }
        
        .complaint-form .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const form = document.querySelector('.complaint-form');
            const subjectInput = document.getElementById('{{ form.subject.vars.id }}');
            const descriptionInput = document.getElementById('{{ form.description.vars.id }}');
            
            form.addEventListener('submit', function(event) {
                let isValid = true;
                
                // Validate subject
                if (!subjectInput.value.trim()) {
                    markInvalid(subjectInput, 'Please enter a subject for your complaint');
                    isValid = false;
                } else {
                    markValid(subjectInput);
                }
                
                // Validate description
                if (!descriptionInput.value.trim()) {
                    markInvalid(descriptionInput, 'Please provide a description of your complaint');
                    isValid = false;
                } else if (descriptionInput.value.trim().length < 20) {
                    markInvalid(descriptionInput, 'Description should be at least 20 characters');
                    isValid = false;
                } else {
                    markValid(descriptionInput);
                }
                
                if (!isValid) {
                    event.preventDefault();
                }
            });
            
            function markInvalid(element, message) {
                element.classList.add('is-invalid');
                
                // Remove existing feedback if any
                const existingFeedback = element.nextElementSibling;
                if (existingFeedback && existingFeedback.classList.contains('invalid-feedback')) {
                    existingFeedback.remove();
                }
                
                // Add feedback message
                const feedback = document.createElement('div');
                feedback.classList.add('invalid-feedback');
                feedback.textContent = message;
                element.parentNode.insertBefore(feedback, element.nextSibling);
            }
            
            function markValid(element) {
                element.classList.remove('is-invalid');
                
                // Remove existing feedback if any
                const existingFeedback = element.nextElementSibling;
                if (existingFeedback && existingFeedback.classList.contains('invalid-feedback')) {
                    existingFeedback.remove();
                }
            }
            
            // Clear validation on input
            subjectInput.addEventListener('input', function() {
                this.classList.remove('is-invalid');
                const feedback = this.nextElementSibling;
                if (feedback && feedback.classList.contains('invalid-feedback')) {
                    feedback.remove();
                }
            });
            
            descriptionInput.addEventListener('input', function() {
                this.classList.remove('is-invalid');
                const feedback = this.nextElementSibling;
                if (feedback && feedback.classList.contains('invalid-feedback')) {
                    feedback.remove();
                }
            });
        });
    </script>
{% endblock %} 